{
    "extends": [
        "stylelint-config-recommended-scss",
        "stylelint-config-idiomatic-order",
        "stylelint-config-prettier"
    ],
    "rules": {
        "order/order": [
            "declarations",
            {
                "type": "at-rule",
                "name": "media"
            },
            {
                "type": "rule",
                "selector": "^&::(before|after)"
            },
            {
                "type": "rule",
                "selector": "^&:\\w"
            },
            {
                "type": "rule",
                "selector": "^&_"
            },
            {
                "type": "rule",
                "selector": "^."
            }
        ]
    }
}